    <% if(seller){ %>
      <form class="" action="/seller-passwordchange" method="post">
    <% }else{ %>
      <form class="" action="/passwordchange" method="post">
    <% } %>
    <% if(msg != ''){ %>
      <div class="alert alert-info">
        <%=msg%>
      </div>
    <% } %>
      <input type="hidden" name="username" value="<%= username %>">
      <input type="hidden" name="email" value="<%= email %>">
      <div class="form-group row">
        <label for="otp" class="col-sm-3 col-form-label">Enter otp:</label>
        <div class="col-sm-9">
          <input type="number" name="otp" value="" required placeholder="Enter otp" class="form-control">
        </div>
      </div>
      <div class="form-group row">
        <label for="password" class="col-sm-3 col-form-label">Password:</label>
        <div class="col-sm-9">
          <input type="password" name="password" value="" id="password" required placeholder="enter new password" class="form-control">
        </div>
      </div>
      <div class="form-group row">
        <label for="confirmPassword" class="col-sm-3 col-form-label">confirm password</label>
        <div class="col-sm-9">
          <input type="password" name="confirmPassword" value="" required placeholder="confirm password" class="form-control">
        </div>
      </div>
      <button type="submit" name="button" class="btn btn-primary form-control">Change password</button>
    </form>
    <% if(seller){ %>
      <form class="" action="/seller-resendotpforpasswordchange" method="post">
    <% }else{ %>
      <form class="" action="/resendotpforpasswordchange" method="post">
    <% } %>
      <input type="hidden" name="username" value="<%= username %>">
      <input type="hidden" name="email" value="<%= email %>">
      <button type="submit" name="button" class="btn btn-warning form-control">Resend otp</button>
    </form>
