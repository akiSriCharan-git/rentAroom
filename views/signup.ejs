    <div class="center">
      <div class="login-box center">
        <% if(seller){ %>
          <h1>Seller signup</h1>
          <form class="" action="/seller-signup" method="post">
        <% }else{ %>
          <h1>User signup</h1>
          <form class="" action="/signup" method="post">
        <% } %>
        <% if(msg != ''){ %>
          <div class="alert alert-info">
            <%=msg%>
          </div>
        <% } %>
        <div class="form-group row">
          <label for="name" class="col-sm-2 col-from-label">Name:</label>
          <div class="col-sm-10">
            <input type="text" name="name" placeholder='Your full name' required value="<%=name%>" class="form-control">
          </div>
        </div>
        <div class="form-group row">
          <label for="birthday" class="col-sm-2 col-form-label">Birthday:</label>
          <div class="col-sm-10">
            <input type="date" name="birthday" required value="<%= birthday %>" class="form-control">
          </div>
        </div>
        <div class="form-group row">
          <label for="address" class="col-sm-2 col-from-label">Address:</label>
          <div class="col-sm-10">
            <input type="text" name="housenumber" placeholder="House number" required value='<%= housenumber %>' class="form-control">
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-2">
          </div>
          <div class="col-sm-10">
            <input type="text" name="street" placeholder="Street" required value="<%= street%>" class="form-control">
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-2">

          </div>
          <div class="col-sm-10">
            <input type="text" name="city" placeholder="City" required value="<%= city %>" class="form-control">
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-2">

          </div>
          <div class="col-sm-10">
            <input type="text" name="state" placeholder="State" required value="<%=state%>" class="form-control">
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-2">

          </div>
          <div class="col-sm-10">
            <input type="text" name="country" placeholder='country' required value="<%= country %>" class="form-control">
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-2">

          </div>
          <div class="col-sm-10">
            <input type="number" name="pincode" placeholder="pincode" required value="<%= pincode %>" class="form-control">
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-2">
            <label for="email" class="col-form-label">Email:</label>
          </div>
          <div class="col-sm-10">
            <input type="email" name="email" placeholder="Enter your email" value= "<%=email%>" required class="form-control">
          </div>
        </div>
        <button type="submit" name="next" class="btn btn-primary form-control">Verify Email</button>
        </form>
      </div>
    </div>
